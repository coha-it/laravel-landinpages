        .row.justify-content-center(data-jarallax-element='-50')
          .col-10.col-sm-8.col-md-7.col-lg-9.col-xl-7(data-aos='zoom-in' data-aos-delay='250')
            img.img-fluid(src="https://dreamteam-survey.s3.eu-central-1.amazonaws.com/landingpage/images/stock_2.png" alt='Screenshot')
